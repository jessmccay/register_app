<h1>Please register!</h1>
<br>
<hr>
<form action="/users/register" method="post">
  <input type="text" name="full_name" placeholder="Full Name" /><br>
  <input type="text" name="street_address" placeholder="Address" /><br>
  <input type="text" name="city" placeholder="City" /><br>
  <input type="text" name="state" placeholder="State" /><br>
  <input type="text" name="postal_code" placeholder="Postal Code" /><br>
  <input type="text" name="country" placeholder="Country" /><br>
  <input type="text" name="phone1" placeholder="Phone" /><br>
  <input type="text" name="phone2" placeholder="Phone" /><br>
  <input type="text" name="phone3" placeholder="Phone" /><br>
  <input type="text" name="email_address" placeholder="Email Address" /><br>
  <input type="text" name="user_id" placeholder="User ID" required/><br>
  <input type="password" name="password" placeholder="Password" required/><br>
  <input type="submit" value="Register"/><br>
</form>

<hr>
<hr>
<h1>Log In</h1>
<form action="/users/login" method="post">
  <input type="text" name="login_user_id" placeholder="User ID"><br>
  <input type="password" name="login_password" placeholder="Password"><br>
  <input type="submit" value="Log In"><br>
   <%= flash[:notice] %>
</form>
